<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tenco.bank.repository.interface.UserRepository">
    <insert id="insert">
        insert into user_tb (username, password, fullname, created_at) 
        values(#{username}, #{password}, #{fullname}, now())
    </insert>   
    
    <update id="updateById" >
        update user_tb set username= #{username}, password= #{password}, fullname= #{fullname} where id = #{id} 
    </update>   
    
    <select id="findAll" resultType="com.tenco.bank.repository.model.user.User">
        select * from user_tb
    </select>

    <select id="findById" resultType="com.tenco.bank.repository.model.user.User">
        select * from user_tb where id = #{id}
    </select>   
	
    <delete id="deleteById" >
        delete from user_tb where id = #{id} 
    </delete>
	    
